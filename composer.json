{
    "name": "facile-it/doctrine-mysql-come-back",
    "description": "Auto reconnect on Doctrine MySql has gone away exceptions on doctrine/dbal",
    "keywords": [
        "mysql",
        "doctrine",
        "reconnect",
        "refresh",
        "connection",
        "has gone away",
        "exception"
    ],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Alessandro Lai",
            "email": "alessandro.lai85@gmail.com"
        },
        {
            "name": "Luca Bo",
            "email": "luca.boeri@facile.it"
        }
    ],
    "require": {
        "php": "^8.0",
        "doctrine/common": "^3.4",
        "doctrine/dbal": "^4.0.0"
    },
    "require-dev": {
        "ext-pdo": "*",
        "facile-it/facile-coding-standard": "^0.5.2",
        "fig/log-test": "^1.0",
        "infection/infection": "^0.26.6",
        "phpdocumentor/reflection-docblock": ">=4.0.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.6",
        "psalm/plugin-phpunit": "^0.18.4",
        "symfony/phpunit-bridge": "^6.2",
        "vimeo/psalm": "^5.8.0"
    },
    "autoload": {
        "psr-4": {
            "Facile\\DoctrineMySQLComeBack\\Doctrine\\DBAL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Facile\\DoctrineMySQLComeBack\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "facile-it/facile-coding-standard": true,
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "phpunit",
        "phpcs": "php-cs-fixer fix --dry-run --diff",
        "phpcs-fix": "php-cs-fixer fix --diff"
    }
}
